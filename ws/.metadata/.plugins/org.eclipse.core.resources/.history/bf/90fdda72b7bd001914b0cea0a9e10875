		for (int j = 0; j < string.length(); ) {

			int found = string.indexOf("category:", j);

			System.out.println("Index of category " + found);

			if (found == -1) {
				break;
			}
			int start = found + 9;
			int end = string.indexOf(" ", start);
			System.out.println(string.substring(start, end));
			j = end + 1;

		}
		
		

	
	}

